<h1>Listing audiofiles</h1>

<table>
  <tr>
    <th>File</th>
    <th>Name</th>
    <th>-</th>
    <th>-</th>
    <th>-</th>
  </tr>

<% for audiofile in @audiofiles %>
  <tr>
    <td><%=h audiofile.file_size %></td>
    <td><%=h audiofile.name %></td>
    <td><%= link_to 'Show', audiofile %></td>
    <td><%= link_to 'Edit', edit_audiofile_path(audiofile) %></td>
    <td><%= link_to 'Destroy', audiofile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

