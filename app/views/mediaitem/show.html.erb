<% content_for :title do %>MediaItem Property<% end %>

<% content_for :actions do %>
<table cellspacing="1" border="0">
<tr><td><%=link_to 'upload new', :action=>:new %></td></tr>
<tr><td><%=link_to 'index', :action=>:index, :id=>@item.id %></td></tr>
<tr><td><%=link_to 'edit', :action=>:edit, :id=>@item.id %></td></tr>
<tr><td><%=link_to 'update shape', :action=>:update_shape, :id=>@item.id %></td></tr>
</table>
<% end %>

<table cellspacing="1" border="0">
<tr><th>author</th>  <td><%= @item.author %></td></tr>
<tr><th>title</th> <td><%= @item.title %></td></tr>
<tr><th>pubDate</th> <td> <%= @item.pubdate.to_s(:short) %></td></tr>
<tr><th>description</th> <td> <%= @item.desc %></td></tr>
<tr><th>category</th><td> <%= @item.category %></td></tr>
<tr><th>enclosure.url</th>
<td>
<% s = url_for(:controller=>:audio, :action=>@item.filename_without_ext, :format=>:wav, :only_path=>false) %>
<%=link_to s, s %>
</td></tr> 
<tr><th>enclosure.type</th><td><%= @item.filetype %></td></tr> 
<tr><th>num_frames</th><td> <%= @item.mediaitemshapes.size %></td></tr>
</table>


